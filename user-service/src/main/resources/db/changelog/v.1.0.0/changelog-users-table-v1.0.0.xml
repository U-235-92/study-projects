<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="create-users-table" author="U-235-92">
        <createTable tableName="users">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="login" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="user_details_id" type="int"/>
            <column name="created_at" type="bigint"/>
            <column name="updated_at" type="bigint"/>
            <column name="not_banned" type="boolean"/>
        </createTable>
    </changeSet>
    <changeSet id="add-fk-user-details" author="U-235-92">
        <addForeignKeyConstraint 
            baseTableName="users" baseColumnNames="user_details_id" 
            constraintName="fk_user_details_id" 
            referencedTableName="user_details" referencedColumnNames="id" 
            onDelete="NO ACTION" 
            onUpdate="CASCADE"/>
    </changeSet>
    <changeSet id="add-idx-user-details" author="U-235-92">
        <createIndex tableName="users" indexName="idx_user_details_id">
            <column name="user_details_id"></column>
        </createIndex>
    </changeSet>
</databaseChangeLog>